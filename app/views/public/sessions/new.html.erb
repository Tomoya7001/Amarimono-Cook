<div class="d-flex justify-content-center">
  <%= flash[:notice] %>
</div>
<div class="container">
<br>
<div class="d-flex justify-content-center">
  <h1>ログイン</h1>
</div>
<%= form_with model: @customer, url: customer_session_path do |f| %>
  <div class="d-flex justify-content-center">
    <div>
      <table class="table table-borderless">
        <tr>
          <div class="field">
            <th class="col-5"><%= f.label :メールアドレス %></th>
            <td class="col-5"><%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "35x35" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <th class="col-5"><%= f.label :パスワード %></th>
            <td class="col-5"><%= f.password_field :password, autocomplete: "current-password", :size => "35x35" %></td>
          </div>
        </tr>
        <tr>
          <th></th>
          <th class="col-5">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          </th>
        </tr>
        <tr>
          <th></th>
          <th>
            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
            </div>
          </th>
        </tr>
        <tr>
          <th>
            <%= render "public/shared/links" %>
          </th>
        </tr>
      </table>
    </div>
  </div>
<% end %>
