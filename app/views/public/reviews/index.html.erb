<div class="container">
  <br>
  <div class="d-flex justify-content-center">
    <h1><strong>レビュー一覧</strong></h1>
  </div>
  <br>
  <% if @reviews.empty? %>
    <div calss="row">
      <div>レビューがありません。</div>
    </div>
  <% else %>
    <div class="row">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>記入者</th>
            <th>評価</th>
            <th>コメント</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= current_customer.name %></td>
            <td></td>
            <td>
              <% @reviews.each do |r| %>
                <%= r.content %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
</div>