<p class="is-size-4 mb-3">レビューを書く</p>

<div class="rating-box mt-3">
  <%= form_with model: review, url: public_cook_reviews_path(cook), local: true do |f| %>
    <div class="main-rating">
      <div class="rating mb-3">
        <span class="far fa-star" id="star"></span>
        <span class="far fa-star" id="star"></span>
        <span class="far fa-star" id="star"></span>
      </div>
      <div class="ml-3 rating-value-display">
        <span id="rating-value-display">0</span>/3
      </div>
    </div>
    <%= f.hidden_field :cook_id, value: cook.id %>
    <%= f.hidden_field :score, id: "rating-value" %>
    <%= f.text_field :content, class: "textarea" %>
    <%= f.submit "保存", class: "button mt-3" %>
    <%= link_to "他のレビューを見る", public_cook_reviews_path(cook), class: "button light ml-3 mt-3" %>
  <% end %>
</div>

<%#= javascript_include_tag "reviews.js" %>