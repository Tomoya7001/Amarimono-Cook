<div class="container">
  <div class="row mt-4">
    <section class="new-items col-md-12">
      <div class="d-flex justify-content-center">
        <h1><strong>いいね一覧</strong></h1>
      </div>
      <div class="row">
        <% @customer.favorites.each do |customer| %>
          <div class="col-6">
            <br>
            <div class="row">
              <strong>[<%= customer.cook.cook_name %>]</strong>
              <%= link_to public_cook_path(customer) do %>
                <% if customer.cook.image.attached? %>
                  <%= image_tag customer.cook.image, size: "300x300" %>
                <% else %>
                  <%= image_tag "noimageフォト", size: "300x300" %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>