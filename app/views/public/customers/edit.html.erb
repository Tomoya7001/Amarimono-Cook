<h1>編集画面</h1>

<%= form_with model: @cook, url: public_cook_path(@cook.id), method: :patch do |f| %>

  <h4>料理名</h4>
  <%= f.text_field :cook_name %>

  <h4>画像</h4>
  <%= f.file_field :image %>

  <h4>ジャンル</h4>
      <%= f.collection_select :genre_id, @genre, :id, :name, include_blank: "--選択してください--"  %>

  <h4>作り方</h4>
  <%= f.text_area :introduction %>

  <%= f.submit "保存" %>

<% end %>