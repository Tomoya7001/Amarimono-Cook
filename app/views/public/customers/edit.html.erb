<h1>編集画面</h1>

<%= form_with model: @customer, url: public_my_page_path, local:true do |f| %>

  <%= f.label :ユーザーネーム %>
  <%= f.text_field :name, autofocus: true %>

  <%= f.label :メールアドレス %>
  <%= f.text_field :email, autofocus: true %>

  <%= f.submit "編集を保存" %>

<% end %>

<%= link_to "退会する", public_unsubscribe_path %>