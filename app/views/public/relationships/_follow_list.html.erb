      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>ユーザー名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= customer.name %></td>
            <td><%= link_to "ページへ移動", public_path(customer) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
<% else %>
  <div calss="row">
    <div>ユーザーはいません</div>
  </div>
<% end %>