<div class="d-flex justify-content-center">
  <%= flash[:notice] %>
</div>
<div class="container">
  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <br>
  <div class="d-flex justify-content-start">
    <h1><strong>ジャンル追加</strong></h1>
  </div>
  <div class="d-flex justify-content-start">
    <div>
      <div>
        <br>
        <td><%= f.label :ジャンル名 %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= f.text_field :name, placeholder: "ジャンル名" %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= f.submit '新規登録', class: "btn btn-success btn-sm" %></td>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="container">
  <br>
  <div class="d-flex justify-content-center">
    <h1><strong>ジャンル一覧</strong></h1>
  </div>
  <br>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>ジャンル名</th>
        <th>編集</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>